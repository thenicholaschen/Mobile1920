<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainMenu">
    <fragment
        android:id="@+id/mainMenu"
        android:name="com.github.thenicholaschen.knightsofthe4moons.MainMenu"
        android:label="Main Menu"
        tools:layout="@layout/fragment_main_menu">
        <action
            android:id="@+id/action_mainMenu_to_howToPlay"
            app:destination="@id/howToPlay" />
        <action
            android:id="@+id/action_mainMenu_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/howToPlay"
        android:name="com.github.thenicholaschen.knightsofthe4moons.HowToPlay"
        android:label="How To Play"
        tools:layout="@layout/fragment_how_to_play" />
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.github.thenicholaschen.knightsofthe4moons.GameFragment"
        android:label="The Sun Knight"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/endingsFragment"
        android:name="com.github.thenicholaschen.knightsofthe4moons.EndingsFragment"
        android:label="Unlocked Endings"
        tools:layout="@layout/fragment_endings" >
        <action
            android:id="@+id/action_endingsFragment_to_endingDisplay"
            app:destination="@id/endingDisplay" />
    </fragment>
    <fragment
        android:id="@+id/endingDisplay"
        android:name="com.github.thenicholaschen.knightsofthe4moons.EndingDisplay"
        android:label="View Ending"
        tools:layout="@layout/fragment_ending_display" />
</navigation>
